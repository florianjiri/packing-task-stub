{
    "name": "shipmonk/packing",
    "description": "Testing day application stub",
    "require": {
        "ext-pdo": "*",
        "ext-json": "*",
        "php": ">=7.4",
        "psr/http-message": "1.*",
        "guzzlehttp/psr7": "1.*",
        "doctrine/orm": "2.*",
        "doctrine/cache": "1.*",
        "doctrine/annotations": "1.*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1.8",
        "symplify/easy-coding-standard": "^11.0"
    },

    "scripts": {
        "phpstan": "php vendor/bin/phpstan analyse -l 8 src",
        "ecs": "php vendor/bin/ecs check src",
        "ecs-fix": "php vendor/bin/ecs check src --fix",
        "analyze": [
            "@phpstan",
            "@ecs"
        ]
    }
}
